# Block hotlinking
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?harshitsolutions\. [NC]
    RewriteCond %{REQUEST_URI} \.(jpe?g|png|gif|svg|css|js)$ [NC]
    RewriteRule \.(jpe?g|png|gif|svg|css|js)$ - [F]
</IfModule>

# Block direct access to source files
<FilesMatch "\.(css|js)$">
    <IfModule mod_rewrite.c>
        RewriteEngine On
        RewriteCond %{HTTP_REFERER} !^https?://(www\.)?harshitsolutions\. [NC]
        RewriteCond %{HTTP_REFERER} !^$
        RewriteRule ^(.*)$ - [F,L]
    </IfModule>
    
    # Prevent viewing source
    Header set Content-Type "application/octet-stream"
    Header set Content-Disposition "attachment"
</FilesMatch>

# Obfuscate file extensions
<IfModule mod_rewrite.c>
    RewriteRule ^assets/(.+)\.css$ /styles.css [L]
    RewriteRule ^assets/(.+)\.js$ /script.js [L]
</IfModule>